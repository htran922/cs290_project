<div class="log-container">
    <div class="log-input">
        <form action="/updatedEntry">
            <fieldset>
                <legend>Update Entry {{workout.id}}</legend>
                <label>Name:
                    <input type="text" size="30" name="name" id="name" value="{{workout.name}}" required>
                </label>
                <label>Reps:
                    <input type="number" min="1" max="100" name="reps" id="reps" value="{{workout.reps}}">
                </label>
                <label>Weight:
                    <input type="number" min="0" max="1000" name="weight" id="weight" value="{{workout.weight}}">
                </label>
                <label>Date:
                    <input type="date" name="date" id="date" value="{{workout.date}}">
                </label>
                <label>Unit:
                    {{#if workout.lbs}}
                    <input name="unit" id="unit" type="checkbox" checked> lbs
                    {{else}}
                    <input name="unit" id="unit" type="checkbox">
                    {{/if}}
                </label>
                <input type="hidden" name="id" value={{workout.id}}>
                <input type="submit" value="Update">
            </fieldset>
        </form>
    </div>
</div>
    
